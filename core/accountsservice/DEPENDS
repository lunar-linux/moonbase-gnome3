depends polkit
depends vala
depends meson

optional_depends systemd \
                 "-Dsystemd=true" \
                 "-Dsystemd=false -D systemdsystemunitdir=no" \
                 "for systemd support"

optional_depends elogind \
                 "-Delogind=true" \
                 "-Delogind=false" \
                 "for elogind support" \
                 "n"

optional_depends gtk-doc \
                 "-Dgtk_doc=true" \
                 "-Dgtk_doc=false" \
                 "for building documentation" \
                 "n"

optional_depends gobject-introspection \
                "-Dintrospection=true" \
                "-Dintrospection=false" \
                "for introspection support" \
                "y"
