depends atk
depends pango
depends gdk-pixbuf
depends gdbus-codegen
depends libxkbcommon
depends libepoxy

optional_depends cups \
                 " -Dprint_backends=file,cups -Dcolord=yes" \
                 " -Dprint_backends=file -Dcolord=no" \
                 "enable CUPS as print backend (triggers colord as hard dependency)"
if in_depends cups; then
    depends colord
fi

#optional_depends json-glib "-Dprint_backends=cloudprint" "--disable-cloudprint" "also required by cloudprint"
#optional_depends rest      "--enable-cloudprint" "--disable-cloudprint" "for Google Cloud Print Support"

optional_depends %X \
                 "-Dx11_backend=true" \
                 "-Dx11_backend=false" \
                 "for the X11 backend (recommended)"

optional_depends wayland-protocols \
                 "-Dwayland-backend=true -Dbroadway_backend=true" \
                 "-Dwayland-backend=false -Dbroadway_backend=false" \
                 "for the waylany backend"

# Documentation and introspection
optional_depends gtk-doc \
                 "-Dgtk-doc=true" \
                 "-Dgtk-doc=false" \
                 "for building documentation"

optional_depends man \
                 "-Dman=true" \
                 "-Dman=false" \
                 "for building manual pages"

optional_depends gobject-introspection \
                 "-Dintrospection=true" \
                 "-Dintrospection=false" \
                 "for introspection support"
