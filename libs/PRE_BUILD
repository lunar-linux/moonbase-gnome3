if   [ -z $LC_CTYPE ]; then
  if [ "`echo $LANG|cut -d\. -f2`" != "utf8" ]; then
     echo "LANG=$LANG variable is not utf8 compatible"
     echo ""
     echo "run \`export LANG=$LANG.utf8\` or your favorite utf8 compatible LANG"
     false;
  fi;
elif [ "`echo $LC_CTYPE|cut -d\. -f2`" != "utf8" ]; then
  echo "LC_CTYPE variable is not utf8 compatible"
  echo ""
  echo "run \`export LC_CTYPE=$LC_CTYPE.utf8\` or your favorite utf8 compatible LC_CTYPE"
  false;
fi &&

default_pre_build &&
sedit 's@“@\"@; s@”@\"@' Source/WebCore/xml/XMLViewer.{css,js} &&
sedit '1 i set(bmalloc_LIBRARIES dl)' Source/bmalloc/CMakeLists.txt
