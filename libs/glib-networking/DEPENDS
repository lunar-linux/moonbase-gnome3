depends glib-2
depends ca-certificates

optional_depends libproxy \
                 "-D libproxy=enabled" \
                 "-D libproxy=disabled" \
                 "for proxy support"

optional_depends openssl \
                 "-D openssl=enabled" \
                 "-D openssl=disabled" \
                 "for OpenSSL support" \
                 "y"

optional_depends gnutls \
                 "-D gnutls=enabled" \
                 "-D gnutls=disabled" \
                 "for GnuTLS support" \
                 "n"

optional_depends gsettings-desktop-schemas \
                 "-D gnome_proxy=enabled" \
                 "-D gnome_proxy=disabled" \
                 "for Gnome support" \
                 "n"
