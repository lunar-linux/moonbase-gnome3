depends glib-2
depends meson
depends docbook2X
depends gobject-introspection
depends docutils

optional_depends libjpeg-turbo \
                 "-Djpeg=enabled" \
                 "-Djpeg=disabled" \
                 "for JPEG image loader" \
                 "y"

optional_depends libpng \
                 "-Dpng=enabled" \
                 "-Dpng=disabled" \
                 "for PNG image loader" \
                 "y"

optional_depends tiff \
                "-Dtiff=enabled" \
                "-Dtiff=disabled" \
                "for TIFF image loader" \
                "y"

optional_depends libxml2 \
                 "-Dman=true" \
                 "-Dman=false" \
                 "for installing man pages" \
                 "n"

optional_depends shared-mime-info \
                 "-Dgio_sniffing=true" \
                 "-Dgio_sniffing=false" \
                 "for file type detection using GIO" \
                 "y"

optional_depends glycin "-Dglycin=enabled" \
                        "-Dglycin=disabled" \
                        "Use Glycin as the loader,${PROBLEM_COLOR}Say no on first install${DEFAULT_COLOR}"


