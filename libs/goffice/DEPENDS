depends libxslt
depends libgsf
depends cairo
depends pango
depends librsvg
depends gdk-pixbuf
depends wayland
depends gtk+-3

optional_depends libspectre "" "" "support embedded EPS"

optional_depends lasem \
                 "--with-lasem" \
                 "--without-lasem" \
                 "for SVG/MathML rendering" \
                 "n"

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "for building documentation" \
                 "n"

optional_depends gobject-introspection \
                 "--enable-introspection" \
                 "--disable-introspection" \
                 "for object introspection" \
                 "y"
